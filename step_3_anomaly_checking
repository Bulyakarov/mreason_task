import pandas as pd
import numpy as np
import os
from datetime import datetime

# –ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö
file_path = 'X:\\tests\\step2.xlsx'
df = pd.read_excel(file_path, sheet_name='def_data')

# –û—á–∏—Å—Ç–∫–∞ –∫–æ–ª–æ–Ω–æ–∫ –æ—Ç –ª–∏—à–Ω–∏—Ö –ø—Ä–æ–±–µ–ª–æ–≤
df.columns = df.columns.str.strip()

print("üîç –ù–∞—á–∏–Ω–∞–µ–º –ø—Ä–æ–≤–µ—Ä–∫—É –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ—Å—Ç–∏ –¥–∞–Ω–Ω—ã—Ö...\n")

# ======================================================================
# –ë–õ–û–ö 0: –ü–†–û–í–ï–†–ö–ê –ò –°–û–•–†–ê–ù–ï–ù–ò–ï –û–¢–ß–Å–¢–ê –ü–û –ê–ù–û–ú–ê–õ–¨–ù–´–ú –î–ê–ù–ù–´–ú
# ======================================================================
print("\n" + "="*60)
print("0) –ü–†–û–í–ï–†–ö–ê –ù–ê –ê–ù–û–ú–ê–õ–ò–ò –ò –°–û–•–†–ê–ù–ï–ù–ò–ï –û–¢–ß–Å–¢–ê")
print("="*60)

# –°–æ–∑–¥–∞—ë–º –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é, –µ—Å–ª–∏ –Ω—É–∂–Ω–æ
output_dir = os.path.dirname(file_path) if os.path.exists(file_path) else '.'
anomaly_report_path_txt = os.path.join(output_dir, 'anomaly_report_2.txt')
anomaly_report_path_xlsx = os.path.join(output_dir, 'anomaly_report_2.xlsx')

# –°–ø–∏—Å–æ–∫ –¥–ª—è —Å–±–æ—Ä–∞ –≤—Å–µ—Ö –∞–Ω–æ–º–∞–ª—å–Ω—ã—Ö —Å—Ç—Ä–æ–∫
all_anomalies = []

# 1. –û—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–µ –ø—Ä–æ–¥–∞–∂–∏ (–≤–∫–ª—é—á–∞—è –∑–∞–≥–ª—É—à–∫–∏ -999, -9999 –∏ –¥—Ä.)
if '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' in df.columns:
    negative_sales = df[df['–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'] < 0].copy()
    if not negative_sales.empty:
        negative_sales['–ê–Ω–æ–º–∞–ª–∏—è'] = '–û—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–µ –ø—Ä–æ–¥–∞–∂–∏'
        all_anomalies.append(negative_sales)
        print(f"‚ö†Ô∏è  –ù–∞–π–¥–µ–Ω–æ {len(negative_sales)} —Å—Ç—Ä–æ–∫ —Å –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–º–∏ –ø—Ä–æ–¥–∞–∂–∞–º–∏")

# 2. –ü—Ä–æ–¥–∞–∂–∏ > 0, –Ω–æ –≤—ã—Ä—É—á–∫–∞ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç –∏–ª–∏ 0
if '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' in df.columns and '–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞' in df.columns:
    inconsistent = df[
        (df['–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'] > 0) &
        (df['–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞'].isna() | (df['–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞'] == 0))
    ].copy()
    if not inconsistent.empty:
        inconsistent['–ê–Ω–æ–º–∞–ª–∏—è'] = '–ü—Ä–æ–¥–∞–∂–∏ –±–µ–∑ –≤—ã—Ä—É—á–∫–∏'
        all_anomalies.append(inconsistent)
        print(f"‚ö†Ô∏è  –ù–∞–π–¥–µ–Ω–æ {len(inconsistent)} —Å—Ç—Ä–æ–∫: –ø—Ä–æ–¥–∞–∂–∏ > 0, –Ω–æ –≤—ã—Ä—É—á–∫–∞ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç")

# 3. –ó–∞–≥–ª—É—à–∫–∏ –≤ –ø—Ä–æ–¥–∞–∂–∞—Ö (-999, -9999, -1 –∏ —Ç.–ø.)
stub_values = [-999, -9999, -1]
if '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' in df.columns:
    stub_rows = df[df['–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'].isin(stub_values)].copy()
    if not stub_rows.empty:
        stub_rows['–ê–Ω–æ–º–∞–ª–∏—è'] = '–ó–∞–≥–ª—É—à–∫–∞ –≤ –ø—Ä–æ–¥–∞–∂–∞—Ö (—Ç–µ—Ö–Ω–∏—á–µ—Å–∫–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ)'
        all_anomalies.append(stub_rows)
        print(f"‚ö†Ô∏è  –ù–∞–π–¥–µ–Ω–æ {len(stub_rows)} —Å—Ç—Ä–æ–∫ —Å –∑–∞–≥–ª—É—à–∫–∞–º–∏ –≤ –ø—Ä–æ–¥–∞–∂–∞—Ö")

# 4. –ü—É—Å—Ç—ã–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è
required_cols = ['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞']
for col in required_cols:
    if col in df.columns:
        missing = df[df[col].isna()].copy()
        if not missing.empty:
            missing['–ê–Ω–æ–º–∞–ª–∏—è'] = f'–ü—É—Å—Ç–æ–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ–µ –ø–æ–ª–µ: {col}'
            all_anomalies.append(missing)
            print(f"‚ö†Ô∏è  –ù–∞–π–¥–µ–Ω–æ {len(missing)} —Å—Ç—Ä–æ–∫ —Å –ø—Ä–æ–ø—É—Å–∫–æ–º –≤ '{col}'")

# 5. –î–£–ë–õ–ò–ö–ê–¢–´ –ø–æ –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏ "–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂" +  "–ú–∞–≥–∞–∑–∏–Ω" + "–ö–æ–ª–ª–µ–∫—Ü–∏—è"
# –≠—Ç–æ –Ω–æ–≤–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞
duplicate_check_cols = ['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂',  '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–ª–µ–∫—Ü–∏—è']
if all(col in df.columns for col in duplicate_check_cols):
    # –ù–∞—Ö–æ–¥–∏–º –¥—É–±–ª–∏–∫–∞—Ç—ã –ø–æ —ç—Ç–∏–º —á–µ—Ç—ã—Ä–µ–º –ø–æ–ª—è–º
    duplicates = df[df.duplicated(subset=duplicate_check_cols, keep=False)].copy()
    if not duplicates.empty:
        # –ü–æ–¥—Å—á–∏—Ç—ã–≤–∞–µ–º –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –¥—É–±–ª–∏–∫–∞—Ç–æ–≤
        dup_count = len(duplicates) - len(duplicates.drop_duplicates(subset=duplicate_check_cols))
        duplicates['–ê–Ω–æ–º–∞–ª–∏—è'] = f'–î—É–±–ª–∏–∫–∞—Ç –ø–æ {", ".join(duplicate_check_cols)}'
        all_anomalies.append(duplicates)
        print(f"‚ö†Ô∏è  –ù–∞–π–¥–µ–Ω–æ {len(duplicates)} —Å—Ç—Ä–æ–∫ —Å –¥—É–±–ª–∏–∫–∞—Ç–∞–º–∏ –ø–æ –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏: {', '.join(duplicate_check_cols)}")
        print(f"   –£–Ω–∏–∫–∞–ª—å–Ω—ã—Ö –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è –∫–æ–º–±–∏–Ω–∞—Ü–∏–π: {dup_count}")
else:
    missing_cols = [col for col in duplicate_check_cols if col not in df.columns]
    print(f"‚ÑπÔ∏è  –ù–µ–≤–æ–∑–º–æ–∂–Ω–æ –ø—Ä–æ–≤–µ—Ä–∏—Ç—å –¥—É–±–ª–∏–∫–∞—Ç—ã –ø–æ 4 –ø–æ–ª—è–º. –û—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç –∫–æ–ª–æ–Ω–∫–∏: {', '.join(missing_cols)}")

# –û–±—ä–µ–¥–∏–Ω—è–µ–º –≤—Å–µ –∞–Ω–æ–º–∞–ª–∏–∏
if all_anomalies:
    anomalies_df = pd.concat(all_anomalies, ignore_index=True)
    # –£–¥–∞–ª—è–µ–º –¥—É–±–ª–∏–∫–∞—Ç—ã (–æ–¥–Ω–∞ —Å—Ç—Ä–æ–∫–∞ –º–æ–∂–µ—Ç –Ω–∞—Ä—É—à–∞—Ç—å –Ω–µ—Å–∫–æ–ª—å–∫–æ –ø—Ä–∞–≤–∏–ª)
    anomalies_df = anomalies_df.drop_duplicates(subset=df.columns.tolist(), keep='first')
    
    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ TXT
    with open(anomaly_report_path_txt, 'w', encoding='utf-8') as f:
        f.write("–û–¢–ß–Å–¢ –û–ë –ê–ù–û–ú–ê–õ–ò–Ø–• –í –î–ê–ù–ù–´–•\n")
        f.write("="*60 + "\n")
        f.write(f"–î–∞—Ç–∞ –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏: {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}\n\n")
        
        # –ì—Ä—É–ø–ø–∏—Ä—É–µ–º –∞–Ω–æ–º–∞–ª–∏–∏ –ø–æ —Ç–∏–ø—É –¥–ª—è –ª—É—á—à–µ–π —á–∏—Ç–∞–µ–º–æ—Å—Ç–∏
        anomaly_types = anomalies_df['–ê–Ω–æ–º–∞–ª–∏—è'].unique()
        for anomaly_type in anomaly_types:
            f.write(f"\n{anomaly_type}:\n")
            f.write("-"*40 + "\n")
            type_rows = anomalies_df[anomalies_df['–ê–Ω–æ–º–∞–ª–∏—è'] == anomaly_type]
            for _, row in type_rows.iterrows():
                f.write(f"  –ú–∞–≥–∞–∑–∏–Ω: {row.get('–ú–∞–≥–∞–∑–∏–Ω', 'N/A')}, ")
                f.write(f"–î–∞—Ç–∞: {row.get('–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', 'N/A')}, ")
                if '–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏' in row:
                    f.write(f"–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏: {row['–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏']}, ")
                if '–ö–æ–ª–ª–µ–∫—Ü–∏—è' in row:
                    f.write(f"–ö–æ–ª–ª–µ–∫—Ü–∏—è: {row['–ö–æ–ª–ª–µ–∫—Ü–∏—è']}, ")
                f.write(f"–ü—Ä–æ–¥–∞–∂–∏: {row.get('–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞', 'N/A')}, ")
                f.write(f"–í—ã—Ä—É—á–∫–∞: {row.get('–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞', 'N/A')}\n")
    
    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ Excel
    anomalies_df.to_excel(anomaly_report_path_xlsx, index=False)
    
    print(f"‚úÖ –û—Ç—á—ë—Ç –æ–± –∞–Ω–æ–º–∞–ª–∏—è—Ö —Å–æ—Ö—Ä–∞–Ω—ë–Ω:")
    print(f"   TXT: {anomaly_report_path_txt}")
    print(f"   Excel: {anomaly_report_path_xlsx}")
    
    # === –û–ü–¶–ò–û–ù–ê–õ–¨–ù–û: –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ —É–¥–∞–ª—è–µ–º –∞–Ω–æ–º–∞–ª—å–Ω—ã–µ —Å—Ç—Ä–æ–∫–∏ –∏–∑ df ===
    print("\nüóëÔ∏è  –£–¥–∞–ª—è–µ–º –∞–Ω–æ–º–∞–ª—å–Ω—ã–µ —Å—Ç—Ä–æ–∫–∏ –∏–∑ –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –¥–∞—Ç–∞—Ñ—Ä–µ–π–º–∞...")
    anomaly_ids = anomalies_df.index
    df_clean = df.drop(index=anomaly_ids).reset_index(drop=True)
    df = df_clean  # –ó–∞–º–µ–Ω—è–µ–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–π df –Ω–∞ –æ—á–∏—â–µ–Ω–Ω—ã–π
    print(f"   –û—Å—Ç–∞–ª–æ—Å—å —Å—Ç—Ä–æ–∫: {len(df)}")
else:
    print("‚úÖ –ê–Ω–æ–º–∞–ª–∏–π –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ.")
    # –°–æ–∑–¥–∞–µ–º –ø—É—Å—Ç–æ–π –æ—Ç—á–µ—Ç –¥–ª—è –¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏–∏
    empty_df = pd.DataFrame(columns=['–°–æ–æ–±—â–µ–Ω–∏–µ'])
    empty_df.loc[0] = ['–ê–Ω–æ–º–∞–ª–∏–π –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ']
    empty_df.to_excel(anomaly_report_path_xlsx, index=False)





# ======================================================================
# –î–ï–¢–ê–õ–¨–ù–ê–Ø –ü–†–û–í–ï–†–ö–ê (–¥–ª—è –∫–æ–Ω—Å–æ–ª—å–Ω–æ–≥–æ –≤—ã–≤–æ–¥–∞)
# ======================================================================
print("\n" + "="*60)
print("–î–ï–¢–ê–õ–¨–ù–ê–Ø –ü–†–û–í–ï–†–ö–ê –ö–ê–ß–ï–°–¢–í–ê –î–ê–ù–ù–´–•")
print("="*60)

# 1. –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è –≤ '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'
if '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' in df.columns:
    negative_sales = df[df['–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'] < 0]
    if not negative_sales.empty:
        print("‚ö†Ô∏è  –û–±–Ω–∞—Ä—É–∂–µ–Ω—ã –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–µ –∑–Ω–∞—á–µ–Ω–∏—è –≤ '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞':")
        print(negative_sales[['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞', '–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞']])
        print()
    else:
        print("‚úÖ –ù–µ—Ç –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã—Ö –∑–Ω–∞—á–µ–Ω–∏–π –≤ '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'")
else:
    print("‚ùó –ö–æ–ª–æ–Ω–∫–∞ '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç")

# 2. –ü—Ä–æ–≤–µ—Ä–∫–∞ –ª–æ–≥–∏—á–µ—Å–∫–æ–π —Å–≤—è–∑–∫–∏: –ø—Ä–æ–¥–∞–∂–∏ > 0 ‚Üí –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –≤—ã—Ä—É—á–∫–∞
if '–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞' in df.columns and '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' in df.columns:
    inconsistent = df[
        (df['–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'] > 0) &
        (df['–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞'].isna() | (df['–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞'] == 0))
    ]
    if not inconsistent.empty:
        print("‚ö†Ô∏è  –ü—Ä–æ–¥–∞–∂–∏ > 0, –Ω–æ –≤—ã—Ä—É—á–∫–∞ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç –∏–ª–∏ –Ω—É–ª–µ–≤–∞—è:")
        print(inconsistent[['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞', '–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞']])
        print()
    else:
        print("‚úÖ –õ–æ–≥–∏—á–µ—Å–∫–∞—è —Å–≤—è–∑–∫–∞ '–ø—Ä–æ–¥–∞–∂–∏ ‚Üí –≤—ã—Ä—É—á–∫–∞' —Å–æ–±–ª—é–¥–µ–Ω–∞")
else:
    print("‚ùó –ù–µ —Ö–≤–∞—Ç–∞–µ—Ç –∫–æ–ª–æ–Ω–æ–∫ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ —Å–≤—è–∑–∏ '–ø—Ä–æ–¥–∞–∂–∏ ‚Üí –≤—ã—Ä—É—á–∫–∞'")

# 3. –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –∑–∞–≥–ª—É—à–∫–∏ —Ç–∏–ø–∞ -999, -9999 –∏ —Ç.–ø.
if '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' in df.columns:
    stub_values = [-999, -9999, -1]
    for stub in stub_values:
        stub_rows = df[df['–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'] == stub]
        if not stub_rows.empty:
            print(f"‚ö†Ô∏è  –û–±–Ω–∞—Ä—É–∂–µ–Ω–∞ –∑–∞–≥–ª—É—à–∫–∞ '{stub}' –≤ '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞':")
            print(stub_rows[['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞']])
            print()
else:
    print("‚ùó –ö–æ–ª–æ–Ω–∫–∞ '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç")

# 4. –ü—Ä–æ–≤–µ—Ä–∫–∞ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã—Ö –ø–æ–ª–µ–π –Ω–∞ –ø—Ä–æ–ø—É—Å–∫–∏
required_cols = ['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞']
for col in required_cols:
    if col in df.columns:
        missing = df[col].isna().sum()
        if missing > 0:
            print(f"‚ö†Ô∏è  –ü—Ä–æ–ø—É—â–µ–Ω–æ {missing} –∑–Ω–∞—á–µ–Ω–∏–π –≤ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ–π –∫–æ–ª–æ–Ω–∫–µ '{col}'")
        else:
            print(f"‚úÖ –ö–æ–ª–æ–Ω–∫–∞ '{col}' –±–µ–∑ –ø—Ä–æ–ø—É—Å–∫–æ–≤")
    else:
        print(f"‚ùó –ö–æ–ª–æ–Ω–∫–∞ '{col}' –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç")

# 5. –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –¥—É–±–ª–∏–∫–∞—Ç—ã –ø–æ "–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂" + "–ú–∞–≥–∞–∑–∏–Ω"
if all(col in df.columns for col in ['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω']):
    duplicates = df.duplicated(subset=['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω'], keep=False)
    if duplicates.any():
        dup_count = len(df[duplicates]) - len(df[duplicates].drop_duplicates(subset=['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω']))
        print(f"‚ö†Ô∏è  –û–±–Ω–∞—Ä—É–∂–µ–Ω—ã –¥—É–±–ª–∏–∫–∞—Ç—ã –ø–æ –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏ '–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂ + –ú–∞–≥–∞–∑–∏–Ω':")
        print(f"   –í—Å–µ–≥–æ —Å—Ç—Ä–æ–∫ —Å –¥—É–±–ª–∏–∫–∞—Ç–∞–º–∏: {len(df[duplicates])}")
        print(f"   –£–Ω–∏–∫–∞–ª—å–Ω—ã—Ö –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è –∫–æ–º–±–∏–Ω–∞—Ü–∏–π: {dup_count}")
        print(df[duplicates][['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞', '–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞']])
        print()
    else:
        print("‚úÖ –î—É–±–ª–∏–∫–∞—Ç–æ–≤ –ø–æ '–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂ + –ú–∞–≥–∞–∑–∏–Ω' –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ")

# 6. –ù–û–í–ê–Ø –ü–†–û–í–ï–†–ö–ê: –î—É–±–ª–∏–∫–∞—Ç—ã –ø–æ "–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂" + "–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏" + "–ú–∞–≥–∞–∑–∏–Ω" + "–ö–æ–ª–ª–µ–∫—Ü–∏—è"
duplicate_check_cols = ['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏', '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–ª–µ–∫—Ü–∏—è']
if all(col in df.columns for col in duplicate_check_cols):
    duplicates_4_fields = df.duplicated(subset=duplicate_check_cols, keep=False)
    if duplicates_4_fields.any():
        dup_data = df[duplicates_4_fields]
        dup_count = len(dup_data) - len(dup_data.drop_duplicates(subset=duplicate_check_cols))
        print(f"‚ö†Ô∏è  –û–±–Ω–∞—Ä—É–∂–µ–Ω—ã –¥—É–±–ª–∏–∫–∞—Ç—ã –ø–æ –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏: {', '.join(duplicate_check_cols)}")
        print(f"   –í—Å–µ–≥–æ —Å—Ç—Ä–æ–∫ —Å –¥—É–±–ª–∏–∫–∞—Ç–∞–º–∏: {len(dup_data)}")
        print(f"   –£–Ω–∏–∫–∞–ª—å–Ω—ã—Ö –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è –∫–æ–º–±–∏–Ω–∞—Ü–∏–π: {dup_count}")
        
        # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω–µ—Å–∫–æ–ª—å–∫–æ –ø—Ä–∏–º–µ—Ä–æ–≤
        sample_dups = dup_data.drop_duplicates(subset=duplicate_check_cols).head(3)
        for _, row in sample_dups.iterrows():
            print(f"   –ü—Ä–∏–º–µ—Ä: –ú–∞–≥–∞–∑–∏–Ω '{row['–ú–∞–≥–∞–∑–∏–Ω']}', –î–∞—Ç–∞ '{row['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂']}', "
                  f"–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏ '{row['–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏']}', –ö–æ–ª–ª–µ–∫—Ü–∏—è '{row['–ö–æ–ª–ª–µ–∫—Ü–∏—è']}'")
        print()
    else:
        print(f"‚úÖ –î—É–±–ª–∏–∫–∞—Ç–æ–≤ –ø–æ –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏ {', '.join(duplicate_check_cols)} –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ")
else:
    missing_cols = [col for col in duplicate_check_cols if col not in df.columns]
    print(f"‚ÑπÔ∏è  –ù–µ–≤–æ–∑–º–æ–∂–Ω–æ –ø—Ä–æ–≤–µ—Ä–∏—Ç—å –¥—É–±–ª–∏–∫–∞—Ç—ã –ø–æ 4 –ø–æ–ª—è–º. –û—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç –∫–æ–ª–æ–Ω–∫–∏: {', '.join(missing_cols)}")

# 7. –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –ø–æ–ª–Ω—ã–µ –¥—É–±–ª–∏–∫–∞—Ç—ã —Å—Ç—Ä–æ–∫ (–≤—Å–µ –∫–æ–ª–æ–Ω–∫–∏ –æ–¥–∏–Ω–∞–∫–æ–≤—ã)
print("\nüîç –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –ø–æ–ª–Ω—ã–µ –¥—É–±–ª–∏–∫–∞—Ç—ã —Å—Ç—Ä–æ–∫...")
full_duplicates = df[df.duplicated(keep=False)]  # keep=False ‚Üí –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç –í–°–ï –¥—É–±–ª–∏–∫–∞—Ç—ã
if not full_duplicates.empty:
    print(f"‚ö†Ô∏è  –û–±–Ω–∞—Ä—É–∂–µ–Ω–æ {len(full_duplicates)} –ø–æ–ª–Ω–æ—Å—Ç—å—é –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è —Å—Ç—Ä–æ–∫:")
    print(f"   –£–Ω–∏–∫–∞–ª—å–Ω—ã—Ö –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è —Å—Ç—Ä–æ–∫: {len(full_duplicates) - len(full_duplicates.drop_duplicates())}")
    print(full_duplicates)
    print()
else:
    print("‚úÖ –ü–æ–ª–Ω—ã—Ö –¥—É–±–ª–∏–∫–∞—Ç–æ–≤ —Å—Ç—Ä–æ–∫ –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ")
    
print("\n‚úÖ –ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞.")
