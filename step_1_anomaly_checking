import pandas as pd
import numpy as np
import os
from datetime import datetime
from typing import List, Dict, Any

# –ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö
file_path = 'X:\\tests\\start_data.xlsx'
df = pd.read_excel(file_path, sheet_name='def_data')

# –û—á–∏—Å—Ç–∫–∞ –∫–æ–ª–æ–Ω–æ–∫ –æ—Ç –ª–∏—à–Ω–∏—Ö –ø—Ä–æ–±–µ–ª–æ–≤
df.columns = df.columns.str.strip()

print("üîç –ù–∞—á–∏–Ω–∞–µ–º –ø—Ä–æ–≤–µ—Ä–∫—É –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ—Å—Ç–∏ –¥–∞–Ω–Ω—ã—Ö...\n")

# ======================================================================
# –ë–õ–û–ö 0: –ü–†–û–í–ï–†–ö–ê –ò –°–û–•–†–ê–ù–ï–ù–ò–ï –û–¢–ß–Å–¢–ê –ü–û –ê–ù–û–ú–ê–õ–¨–ù–´–ú –î–ê–ù–ù–´–ú
# ======================================================================
print("\n" + "="*60)
print("0) –ü–†–û–í–ï–†–ö–ê –ù–ê –ê–ù–û–ú–ê–õ–ò–ò –ò –°–û–•–†–ê–ù–ï–ù–ò–ï –û–¢–ß–Å–¢–ê")
print("="*60)

# –°–æ–∑–¥–∞—ë–º –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—é, –µ—Å–ª–∏ –Ω—É–∂–Ω–æ
output_dir = os.path.dirname(file_path) if os.path.exists(file_path) else '.'
anomaly_report_path_txt = os.path.join(output_dir, 'anomaly_report.txt')
anomaly_report_path_xlsx = os.path.join(output_dir, 'anomaly_report.xlsx')

# –°–ø–∏—Å–æ–∫ –¥–ª—è —Å–±–æ—Ä–∞ –≤—Å–µ—Ö –∞–Ω–æ–º–∞–ª—å–Ω—ã—Ö —Å—Ç—Ä–æ–∫ –∏ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ –¥–ª—è –∫–æ–Ω—Å–æ–ª–∏
all_anomalies = []
console_stats = []

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –∞–Ω–æ–º–∞–ª–∏–π —Å –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–π —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–µ–π —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏
def add_anomaly(anomaly_df: pd.DataFrame, anomaly_type: str, log_message: str = None):
    """–î–æ–±–∞–≤–ª—è–µ—Ç –∞–Ω–æ–º–∞–ª–∏–∏ –≤ –æ–±—â–∏–π —Å–ø–∏—Å–æ–∫ –∏ —Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–µ—Ç —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –¥–ª—è –∫–æ–Ω—Å–æ–ª–∏."""
    if not anomaly_df.empty:
        anomaly_df = anomaly_df.copy()
        anomaly_df['–ê–Ω–æ–º–∞–ª–∏—è'] = anomaly_type
        all_anomalies.append(anomaly_df)
        
        # –°–æ—Ö—Ä–∞–Ω—è–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –¥–ª—è –∫–æ–Ω—Å–æ–ª—å–Ω–æ–≥–æ –≤—ã–≤–æ–¥–∞
        console_stats.append({
            'type': anomaly_type,
            'count': len(anomaly_df),
            'data': anomaly_df,
            'log_message': log_message or f"–ù–∞–π–¥–µ–Ω–æ {len(anomaly_df)} —Å—Ç—Ä–æ–∫: {anomaly_type}"
        })
        print(f"‚ö†Ô∏è  {log_message or f'–ù–∞–π–¥–µ–Ω–æ {len(anomaly_df)} —Å—Ç—Ä–æ–∫: {anomaly_type}'}")

# 1. –û—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–µ –ø—Ä–æ–¥–∞–∂–∏ (–≤–∫–ª—é—á–∞—è –∑–∞–≥–ª—É—à–∫–∏ -999, -9999 –∏ –¥—Ä.)
if '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' in df.columns:
    negative_sales = df[df['–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'] < 0]
    add_anomaly(negative_sales, '–û—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–µ –ø—Ä–æ–¥–∞–∂–∏')

# 2. –ü—Ä–æ–¥–∞–∂–∏ > 0, –Ω–æ –≤—ã—Ä—É—á–∫–∞ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç –∏–ª–∏ 0
if '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' in df.columns and '–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞' in df.columns:
    inconsistent = df[
        (df['–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'] > 0) &
        (df['–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞'].isna() | (df['–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞'] == 0))
    ]
    add_anomaly(inconsistent, '–ü—Ä–æ–¥–∞–∂–∏ –±–µ–∑ –≤—ã—Ä—É—á–∫–∏', 
                f"–ù–∞–π–¥–µ–Ω–æ {len(inconsistent) if not inconsistent.empty else 0} —Å—Ç—Ä–æ–∫: –ø—Ä–æ–¥–∞–∂–∏ > 0, –Ω–æ –≤—ã—Ä—É—á–∫–∞ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç")

# 3. –ó–∞–≥–ª—É—à–∫–∏ –≤ –ø—Ä–æ–¥–∞–∂–∞—Ö (-999, -9999, -1 –∏ —Ç.–ø.)
stub_values = [-999, -9999, -1]
if '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞' in df.columns:
    # –ò—Å–∫–ª—é—á–∞–µ–º —É–∂–µ –Ω–∞–π–¥–µ–Ω–Ω—ã–µ –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–µ –ø—Ä–æ–¥–∞–∂–∏, —á—Ç–æ–±—ã –∏–∑–±–µ–∂–∞—Ç—å –¥—É–±–ª–∏—Ä–æ–≤–∞–Ω–∏—è
    already_negative = set()
    if all_anomalies:
        for anomaly_df in all_anomalies:
            if '–ê–Ω–æ–º–∞–ª–∏—è' in anomaly_df.columns and anomaly_df['–ê–Ω–æ–º–∞–ª–∏—è'].iloc[0] == '–û—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–µ –ø—Ä–æ–¥–∞–∂–∏':
                already_negative.update(anomaly_df.index)
    
    stub_rows = df[
        df['–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞'].isin(stub_values) & 
        ~df.index.isin(already_negative)
    ]
    add_anomaly(stub_rows, '–ó–∞–≥–ª—É—à–∫–∞ –≤ –ø—Ä–æ–¥–∞–∂–∞—Ö (—Ç–µ—Ö–Ω–∏—á–µ—Å–∫–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ)',
                f"–ù–∞–π–¥–µ–Ω–æ {len(stub_rows) if not stub_rows.empty else 0} —Å—Ç—Ä–æ–∫ —Å –∑–∞–≥–ª—É—à–∫–∞–º–∏ –≤ –ø—Ä–æ–¥–∞–∂–∞—Ö")

# 4. –ü—É—Å—Ç—ã–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è
required_cols = ['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞']
for col in required_cols:
    if col in df.columns:
        missing = df[df[col].isna()]
        if not missing.empty:
            add_anomaly(missing, f'–ü—É—Å—Ç–æ–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ–µ –ø–æ–ª–µ: {col}',
                       f"–ù–∞–π–¥–µ–Ω–æ {len(missing)} —Å—Ç—Ä–æ–∫ —Å –ø—Ä–æ–ø—É—Å–∫–æ–º –≤ '{col}'")

# 5. –î–£–ë–õ–ò–ö–ê–¢–´ –ø–æ –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏ "–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂" + "–ú–∞–≥–∞–∑–∏–Ω" + "–ö–æ–ª–ª–µ–∫—Ü–∏—è"
duplicate_check_cols = ['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω', '–ö–æ–ª–ª–µ–∫—Ü–∏—è']
if all(col in df.columns for col in duplicate_check_cols):
    duplicates = df[df.duplicated(subset=duplicate_check_cols, keep=False)]
    if not duplicates.empty:
        dup_count = len(duplicates) - len(duplicates.drop_duplicates(subset=duplicate_check_cols))
        add_anomaly(duplicates, f'–î—É–±–ª–∏–∫–∞—Ç –ø–æ {", ".join(duplicate_check_cols)}',
                   f"–ù–∞–π–¥–µ–Ω–æ {len(duplicates)} —Å—Ç—Ä–æ–∫ —Å –¥—É–±–ª–∏–∫–∞—Ç–∞–º–∏ –ø–æ –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏: {', '.join(duplicate_check_cols)}\n   –£–Ω–∏–∫–∞–ª—å–Ω—ã—Ö –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è –∫–æ–º–±–∏–Ω–∞—Ü–∏–π: {dup_count}")
else:
    missing_cols = [col for col in duplicate_check_cols if col not in df.columns]
    console_stats.append({
        'type': '–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è',
        'message': f"–ù–µ–≤–æ–∑–º–æ–∂–Ω–æ –ø—Ä–æ–≤–µ—Ä–∏—Ç—å –¥—É–±–ª–∏–∫–∞—Ç—ã –ø–æ 4 –ø–æ–ª—è–º. –û—Ç—Å—É—Ç—Å—Ç–≤—É—é—Ç –∫–æ–ª–æ–Ω–∫–∏: {', '.join(missing_cols)}"
    })

# –û–±—Ä–∞–±–æ—Ç–∫–∞ –∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –∞–Ω–æ–º–∞–ª–∏–π
if all_anomalies:
    anomalies_df = pd.concat(all_anomalies, ignore_index=True)
    # –£–¥–∞–ª—è–µ–º –¥—É–±–ª–∏–∫–∞—Ç—ã (–æ–¥–Ω–∞ —Å—Ç—Ä–æ–∫–∞ –º–æ–∂–µ—Ç –Ω–∞—Ä—É—à–∞—Ç—å –Ω–µ—Å–∫–æ–ª—å–∫–æ –ø—Ä–∞–≤–∏–ª)
    anomalies_df = anomalies_df.drop_duplicates(subset=df.columns.tolist(), keep='first')
    
    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ TXT
    with open(anomaly_report_path_txt, 'w', encoding='utf-8') as f:
        f.write("–û–¢–ß–Å–¢ –û–ë –ê–ù–û–ú–ê–õ–ò–Ø–• –í –î–ê–ù–ù–´–•\n")
        f.write("="*60 + "\n")
        f.write(f"–î–∞—Ç–∞ –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏: {datetime.now().strftime('%Y-%m-%d %H:%M:%S')}\n\n")
        
        # –ì—Ä—É–ø–ø–∏—Ä—É–µ–º –∞–Ω–æ–º–∞–ª–∏–∏ –ø–æ —Ç–∏–ø—É –¥–ª—è –ª—É—á—à–µ–π —á–∏—Ç–∞–µ–º–æ—Å—Ç–∏
        anomaly_types = anomalies_df['–ê–Ω–æ–º–∞–ª–∏—è'].unique()
        for anomaly_type in anomaly_types:
            f.write(f"\n{anomaly_type}:\n")
            f.write("-"*40 + "\n")
            type_rows = anomalies_df[anomalies_df['–ê–Ω–æ–º–∞–ª–∏—è'] == anomaly_type]
            for _, row in type_rows.iterrows():
                f.write(f"  –ú–∞–≥–∞–∑–∏–Ω: {row.get('–ú–∞–≥–∞–∑–∏–Ω', 'N/A')}, ")
                f.write(f"–î–∞—Ç–∞: {row.get('–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', 'N/A')}, ")
                if '–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏' in row:
                    f.write(f"–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏: {row['–ì–æ–¥  –∫–æ–ª–ª–µ–∫—Ü–∏–∏']}, ")
                if '–ö–æ–ª–ª–µ–∫—Ü–∏—è' in row:
                    f.write(f"–ö–æ–ª–ª–µ–∫—Ü–∏—è: {row['–ö–æ–ª–ª–µ–∫—Ü–∏—è']}, ")
                f.write(f"–ü—Ä–æ–¥–∞–∂–∏: {row.get('–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞', 'N/A')}, ")
                f.write(f"–í—ã—Ä—É—á–∫–∞: {row.get('–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞', 'N/A')}\n")
    
    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ Excel
    anomalies_df.to_excel(anomaly_report_path_xlsx, index=False)
    
    print(f"\n‚úÖ –û—Ç—á—ë—Ç –æ–± –∞–Ω–æ–º–∞–ª–∏—è—Ö —Å–æ—Ö—Ä–∞–Ω—ë–Ω:")
    print(f"   TXT: {anomaly_report_path_txt}")
    print(f"   Excel: {anomaly_report_path_xlsx}")
    
    # === –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ —É–¥–∞–ª—è–µ–º –∞–Ω–æ–º–∞–ª—å–Ω—ã–µ —Å—Ç—Ä–æ–∫–∏ –∏–∑ df ===
    print("\nüóëÔ∏è  –£–¥–∞–ª—è–µ–º –∞–Ω–æ–º–∞–ª—å–Ω—ã–µ —Å—Ç—Ä–æ–∫–∏ –∏–∑ –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –¥–∞—Ç–∞—Ñ—Ä–µ–π–º–∞...")
    anomaly_ids = anomalies_df.index
    df_clean = df.drop(index=anomaly_ids).reset_index(drop=True)
    df = df_clean  # –ó–∞–º–µ–Ω—è–µ–º –æ—Ä–∏–≥–∏–Ω–∞–ª—å–Ω—ã–π df –Ω–∞ –æ—á–∏—â–µ–Ω–Ω—ã–π
    print(f"   –û—Å—Ç–∞–ª–æ—Å—å —Å—Ç—Ä–æ–∫: {len(df)}")
else:
    print("‚úÖ –ê–Ω–æ–º–∞–ª–∏–π –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ.")
    # –°–æ–∑–¥–∞–µ–º –ø—É—Å—Ç–æ–π –æ—Ç—á–µ—Ç –¥–ª—è –¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏–∏
    empty_df = pd.DataFrame(columns=['–°–æ–æ–±—â–µ–Ω–∏–µ'])
    empty_df.loc[0] = ['–ê–Ω–æ–º–∞–ª–∏–π –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ']
    empty_df.to_excel(anomaly_report_path_xlsx, index=False)

# ======================================================================
# –î–ï–¢–ê–õ–¨–ù–ê–Ø –ü–†–û–í–ï–†–ö–ê (–¥–ª—è –∫–æ–Ω—Å–æ–ª—å–Ω–æ–≥–æ –≤—ã–≤–æ–¥–∞) - –±–µ–∑ –¥—É–±–ª–∏—Ä–æ–≤–∞–Ω–∏—è
# ======================================================================
print("\n" + "="*60)
print("–î–ï–¢–ê–õ–¨–ù–ê–Ø –ü–†–û–í–ï–†–ö–ê –ö–ê–ß–ï–°–¢–í–ê –î–ê–ù–ù–´–•")
print("="*60)

# –í—ã–≤–æ–¥–∏–º –≤—Å–µ —Å–æ–±—Ä–∞–Ω–Ω—ã–µ —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫–∏ –∏–∑ –ø–µ—Ä–≤–æ–≥–æ –±–ª–æ–∫–∞
for stat in console_stats:
    if 'message' in stat:
        print(f"‚ÑπÔ∏è  {stat['message']}")
        continue
    
    anomaly_type = stat['type']
    count = stat['count']
    data = stat['data']
    
    if count > 0:
        print(f"‚ö†Ô∏è  {anomaly_type}:")
        
        # –î–ª—è —Ä–∞–∑–Ω—ã—Ö —Ç–∏–ø–æ–≤ –∞–Ω–æ–º–∞–ª–∏–π —Ä–∞–∑–Ω—ã–π –¥–µ—Ç–∞–ª—å–Ω—ã–π –≤—ã–≤–æ–¥
        if '–û—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–µ –ø—Ä–æ–¥–∞–∂–∏' in anomaly_type:
            print(f"   –ù–∞–π–¥–µ–Ω–æ {count} —Å—Ç—Ä–æ–∫:")
            if count <= 10:  # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –≤—Å–µ –µ—Å–ª–∏ –∏—Ö –Ω–µ–º–Ω–æ–≥–æ
                for _, row in data.iterrows():
                    print(f"     –ú–∞–≥–∞–∑–∏–Ω: {row.get('–ú–∞–≥–∞–∑–∏–Ω', 'N/A')}, "
                          f"–î–∞—Ç–∞: {row.get('–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', 'N/A')}, "
                          f"–ü—Ä–æ–¥–∞–∂–∏: {row.get('–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞', 'N/A')}, "
                          f"–í—ã—Ä—É—á–∫–∞: {row.get('–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞', 'N/A')}")
            else:
                print(f"   –ü–µ—Ä–≤—ã–µ 5 –∏–∑ {count} —Å—Ç—Ä–æ–∫:")
                for _, row in data.head(5).iterrows():
                    print(f"     –ú–∞–≥–∞–∑–∏–Ω: {row.get('–ú–∞–≥–∞–∑–∏–Ω', 'N/A')}, "
                          f"–î–∞—Ç–∞: {row.get('–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', 'N/A')}, "
                          f"–ü—Ä–æ–¥–∞–∂–∏: {row.get('–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞', 'N/A')}")
        
        elif '–î—É–±–ª–∏–∫–∞—Ç' in anomaly_type:
            # –î–ª—è –¥—É–±–ª–∏–∫–∞—Ç–æ–≤ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –ø—Ä–∏–º–µ—Ä—ã
            unique_combinations = data.drop_duplicates(subset=duplicate_check_cols if all(c in data.columns for c in duplicate_check_cols) else ['–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', '–ú–∞–≥–∞–∑–∏–Ω'])
            print(f"   –£–Ω–∏–∫–∞–ª—å–Ω—ã—Ö –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è –∫–æ–º–±–∏–Ω–∞—Ü–∏–π: {len(unique_combinations)}")
            print(f"   –ü—Ä–∏–º–µ—Ä—ã –¥—É–±–ª–∏–∫–∞—Ç–æ–≤:")
            for _, row in unique_combinations.head(3).iterrows():
                print(f"     –ú–∞–≥–∞–∑–∏–Ω: '{row.get('–ú–∞–≥–∞–∑–∏–Ω', 'N/A')}', "
                      f"–î–∞—Ç–∞: '{row.get('–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', 'N/A')}', "
                      f"–ö–æ–ª–ª–µ–∫—Ü–∏—è: '{row.get('–ö–æ–ª–ª–µ–∫—Ü–∏—è', 'N/A')}'")
        
        elif '–ü—É—Å—Ç–æ–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ–µ –ø–æ–ª–µ' in anomaly_type:
            col_name = anomaly_type.replace('–ü—É—Å—Ç–æ–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω–æ–µ –ø–æ–ª–µ: ', '')
            print(f"   –ü—Ä–æ–ø—É—â–µ–Ω–æ {count} –∑–Ω–∞—á–µ–Ω–∏–π –≤ –∫–æ–ª–æ–Ω–∫–µ '{col_name}'")
            
        else:
            print(f"   –ù–∞–π–¥–µ–Ω–æ {count} —Å—Ç—Ä–æ–∫")
        
        print()

# –î–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã–µ –ø—Ä–æ–≤–µ—Ä–∫–∏, –∫–æ—Ç–æ—Ä—ã–µ –Ω–µ –¥—É–±–ª–∏—Ä—É—é—Ç—Å—è —Å –ø–µ—Ä–≤—ã–º –±–ª–æ–∫–æ–º

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –ø–æ–ª–Ω—ã–µ –¥—É–±–ª–∏–∫–∞—Ç—ã —Å—Ç—Ä–æ–∫ (–≤—Å–µ –∫–æ–ª–æ–Ω–∫–∏ –æ–¥–∏–Ω–∞–∫–æ–≤—ã) - –Ω–æ–≤–∞—è –ø—Ä–æ–≤–µ—Ä–∫–∞
print("\nüîç –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –ø–æ–ª–Ω—ã–µ –¥—É–±–ª–∏–∫–∞—Ç—ã —Å—Ç—Ä–æ–∫ (–≤—Å–µ –ø–æ–ª—è –æ–¥–∏–Ω–∞–∫–æ–≤—ã)...")
full_duplicates = df[df.duplicated(keep=False)]
if not full_duplicates.empty:
    print(f"‚ö†Ô∏è  –û–±–Ω–∞—Ä—É–∂–µ–Ω–æ {len(full_duplicates)} –ø–æ–ª–Ω–æ—Å—Ç—å—é –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è —Å—Ç—Ä–æ–∫:")
    print(f"   –£–Ω–∏–∫–∞–ª—å–Ω—ã—Ö –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è —Å—Ç—Ä–æ–∫: {len(full_duplicates) - len(full_duplicates.drop_duplicates())}")
    
    # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø—Ä–∏–º–µ—Ä—ã –ø–æ–ª–Ω—ã—Ö –¥—É–±–ª–∏–∫–∞—Ç–æ–≤
    sample_dups = full_duplicates.drop_duplicates().head(3)
    print("   –ü—Ä–∏–º–µ—Ä—ã –¥—É–±–ª–∏—Ä—É—é—â–∏—Ö—Å—è —Å—Ç—Ä–æ–∫:")
    for _, row in sample_dups.iterrows():
        print(f"     –ú–∞–≥–∞–∑–∏–Ω: {row.get('–ú–∞–≥–∞–∑–∏–Ω', 'N/A')}, "
              f"–î–∞—Ç–∞: {row.get('–ú–µ—Å—è—Ü –ø—Ä–æ–¥–∞–∂', 'N/A')}, "
              f"–ü—Ä–æ–¥–∞–∂–∏: {row.get('–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –ø—Ä–æ–¥–∞–∂–∞', 'N/A')}, "
              f"–í—ã—Ä—É—á–∫–∞: {row.get('–°—É–º–º–∞ –≤—ã—Ä—É—á–∫–∞', 'N/A')}")
    print()
else:
    print("‚úÖ –ü–æ–ª–Ω—ã—Ö –¥—É–±–ª–∏–∫–∞—Ç–æ–≤ —Å—Ç—Ä–æ–∫ –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ")

# –û–±—â–∞—è —Å–≤–æ–¥–∫–∞ –ø–æ –∫–∞—á–µ—Å—Ç–≤—É –¥–∞–Ω–Ω—ã—Ö
print("\n" + "="*60)
print("–°–í–û–î–ö–ê –ü–û –ö–ê–ß–ï–°–¢–í–£ –î–ê–ù–ù–´–•")
print("="*60)
print(f"–í—Å–µ–≥–æ —Å—Ç—Ä–æ–∫ –≤ –∏—Å—Ö–æ–¥–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö: {len(pd.read_excel(file_path, sheet_name='def_data'))}")
print(f"–°—Ç—Ä–æ–∫ –ø–æ—Å–ª–µ –æ—á–∏—Å—Ç–∫–∏: {len(df)}")
print(f"–£–¥–∞–ª–µ–Ω–æ —Å—Ç—Ä–æ–∫: {len(pd.read_excel(file_path, sheet_name='def_data')) - len(df)}")

if console_stats:
    print("\n–ù–∞–π–¥–µ–Ω–Ω—ã–µ —Ç–∏–ø—ã –∞–Ω–æ–º–∞–ª–∏–π:")
    for stat in console_stats:
        if 'count' in stat:
            print(f"  ‚Ä¢ {stat['type']}: {stat['count']} —Å—Ç—Ä–æ–∫")
else:
    print("\n‚úÖ –ê–Ω–æ–º–∞–ª–∏–π –Ω–µ –æ–±–Ω–∞—Ä—É–∂–µ–Ω–æ - –¥–∞–Ω–Ω—ã–µ —á–∏—Å—Ç—ã–µ!")

print("\n‚úÖ –ü—Ä–æ–≤–µ—Ä–∫–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞.")
